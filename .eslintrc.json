{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "error",
            { 
                "allow": [
                    "log"
                ]
            }
        ]
    },
    "globals": {
        "$": true,
        "APP": true,
        "View": true,
        "_": true,
        "ga": true,
        "L": true,
        "Popper": true,
        "moment": true,
        "Hammer": true
    }
}